{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "paths": {
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@main/*": ["src/main/*"],
      "@presentation/*": ["src/presentation/*"],
      "@test/*": ["src/test/*"],
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist/"
  ]
}
