{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "paths": {
      "@common/*": ["src/common/*"],
      "data/*": ["src/data/*"],
      "domain/*": ["src/domain/*"],
      "main/*": ["src/main/*"],
      "presentation/*": ["src/presentation/*"],
      "@infra/*": ["src/infra/*"],
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist/"
  ]
}
